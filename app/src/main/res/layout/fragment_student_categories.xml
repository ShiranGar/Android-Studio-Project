<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.StudentCategoriesFragment">

    <Button
        android:paddingBottom="5dp"
        android:id="@+id/btnOtherStudent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Students from my country"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/otherstudents"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <Button
        android:paddingBottom="40dp"
        android:paddingLeft="10dp"
        android:id="@+id/btnStudies"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Studies"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/studies"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Fun"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/fun"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        />

</LinearLayout>